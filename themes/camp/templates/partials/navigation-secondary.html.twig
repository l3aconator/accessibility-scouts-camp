<section class="secondary--navigation">

    {% if page.find('/vision').children.visible %}
    <ul class="nav--dropdown nav--dropdown__sight" aria-hidden="true">
        <div class="nav--dropdown__margin">
            {% for p in page.find('/vision').children.visible %}
                {% set current_page = (p.active or p.activeChild) ? 'active' : '' %}
                <li class="{{ current_page }} nav--sub-item">
                    <a class="nav--wrap" href="{{ p.url }}"><span class="nav--link">{{ p.menu }}</span></a>
                </li>
            {% endfor %}
        </div>
    </ul>
    {% endif %}

