{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {# Load fonts #}
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif" rel="stylesheet">
    <script src="https://use.typekit.net/cam2mhj.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    {# Load stylesheets #}
    {% block stylesheets %}
        <!-- build:css -->{% do assets.addCss('theme://dist/styles/css-compiled/styles.css') %}<!-- endbuild -->
    {% endblock %}
    {{ assets.css() }}

    {# Load js #}
    {% block javascripts %}
        {% do assets.addJs('jquery', {'priority': 101, 'group':'footer'}) %}
        <!-- build:js -->{% do assets.addJs('theme://dist/js/js-compiled/scripts.js', {'priority': 101, 'group':'footer'}) %}<!-- endbuild -->
    {% endblock %}
    {{ assets.js('header') }}

{% endblock head %}
</head>
<body id="top" class="{{ page.header.body_classes }}">
    <div>
        {% block header %}
        <header class="header">
            <div class="container flex-header">
                <div class="header--logo">
                    <a href="/">
                        <img src="{{ url('theme://images/logo-placeholder.png') }}" alt="Logo" />
                    </a>
                </div>
                <div class="header--navbar">
                    {% include 'partials/login-status.html.twig' %}
                    {% block header_navigation %}
                        {% include 'partials/navigation.html.twig' %}
                    {% endblock %}
                </div>
            </div>
        </header>
        {% if theme_config.dropdown.enabled %}
        {% include 'partials/navigation-secondary.html.twig' %}
        {% endif %}
        {% endblock %}

        {% block body %}
        <section id="body" class="{{ class }}">
            {% block content %}{% endblock %}
        </section>
        {% endblock %}

        {% block footer %}
        <footer class="footer">
            <div class="container">
                <div class="flex-grid--gutters">
                    <div class="col">
                        <span class="copyright">&copy; 2017, Built with love by Kyle Bacon</span>
                    </div>
                    <div class="col col--custom__footer">
                        <a class="footer--link" href="/about-manual/colophon">Colophon &raquo;</a>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}
    </div>
    {% block bottom %}
        <script src="https://www.gstatic.com/firebasejs/3.9.0/firebase-app.js"></script>
        <script src="https://www.gstatic.com/firebasejs/3.9.0/firebase-auth.js"></script>
        <script src="https://www.gstatic.com/firebasejs/3.9.0/firebase-database.js"></script>
        <script>
          // Initialize Firebase
          var config = {
            apiKey: "AIzaSyB1X8bT9Oafv7zmcE6m_CTOj93m2uljS8g",
            authDomain: "accessibilityscouts-camp.firebaseapp.com",
            databaseURL: "https://accessibilityscouts-camp.firebaseio.com",
            projectId: "accessibilityscouts-camp",
            storageBucket: "accessibilityscouts-camp.appspot.com",
            messagingSenderId: "141901880495"
          };
          firebase.initializeApp(config);
        </script>
        {{ assets.js('footer') }}
    {% endblock %}
</body>
</html>
