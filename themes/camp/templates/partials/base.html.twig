{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {# Load fonts #}
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif" rel="stylesheet">

    {# Load stylesheets #}
    {% block stylesheets %}
        <!--build:css-->{% do assets.addCss('theme://dist/styles/css-compiled/styles.css') %}<!--endbuild:css-->
    {% endblock %}
    {{ assets.css() }}

    {# Load js #}
    {% block javascripts %}
        {% do assets.addJs('jquery', 101) %}
        <!--build:js-->{% do assets.addJs('theme://dist/js/js-compiled/index.js', 100) %}<!--endbuild:js-->
    {% endblock %}
    {{ assets.js() }}

{% endblock head %}
</head>
<body id="top" class="{{ page.header.body_classes }}">
    <div>
        {% block header %}
        <header class="header">
            <div class="container" id="navbar">
                {% block header_navigation %}
                    {% include 'partials/navigation.html.twig' %}
                {% endblock %}
            </div>
        </header>
        {% endblock %}

        {% block body %}
        <section id="body" class="{{ class }}">
            {% block content %}{% endblock %}
        </section>
        {% endblock %}

        {% block footer %}
        <footer class="footer">
            <div class="container">
                <div class="flex-grid--gutters">
                    <div class="col">
                        <span>&copy; 2017, Built with love by Kyle Bacon</span>
                    </div>
                    <div class="col">
                        <a href="/about-manual/colophon">Colophon &raquo;</a>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}
    </div>
    {% block bottom %}
        {{ assets.js('bottom') }}
    {% endblock %}
</body>
</html>
